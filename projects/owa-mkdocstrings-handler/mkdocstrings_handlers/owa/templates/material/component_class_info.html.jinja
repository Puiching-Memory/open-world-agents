{#- Template for component class information -#}
{% set class_info = plugin.component_class %}
{% if class_info %}
    <div class="class-info">
        {#- Component type indicators -#}
        {% set type_indicators = [] %}
        {% if class_info.is_class %}
            {% set _ = type_indicators.append("Class") %}
        {% endif %}
        {% if class_info.is_function %}
            {% set _ = type_indicators.append("Function") %}
        {% endif %}
        {% if class_info.is_method %}
            {% set _ = type_indicators.append("Method") %}
        {% endif %}
        {% if class_info.is_callable %}
            {% set _ = type_indicators.append("Callable") %}
        {% endif %}

        {% if type_indicators %}
            <p><strong>üîß Type:</strong> {{ type_indicators | join(', ') }}</p>
        {% endif %}

        {#- Module information -#}
        {% if class_info.module %}
            <p><strong>üìÅ Module:</strong> <code>{{ class_info.module }}</code></p>
        {% endif %}

        {#- Base classes for classes -#}
        {% if class_info.bases %}
            {% set bases_str = class_info.bases | map('string') | map('regex_replace', '^(.*)$', '<code>\\1</code>') | join(', ') %}
            <p><strong>üèóÔ∏è Base Classes:</strong> {{ bases_str | safe }}</p>
        {% endif %}
    </div>
{% endif %}
