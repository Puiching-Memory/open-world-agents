{#- Template for usage examples section -#}
{% if plugin.usage_examples %}
    {% filter heading(
        (config.heading_level or 1) + 1,
        role="examples",
        id="usage-examples",
        toc_label="Usage Examples"
    ) %}
        ðŸ’¡ Usage Examples
    {% endfilter %}

    <div class="usage-examples">
        {% for example in plugin.usage_examples %}
            {% set loop_index = loop.index %}
            <div class="example">
                {% filter heading(
                    (config.heading_level or 1) + 3,
                    role="example",
                    id="example-" + loop_index | string,
                    toc_label="Example " + loop_index | string
                ) %}
                    Example {{ loop_index }}
                {% endfilter %}
                <pre><code>{{ example }}</code></pre>
            </div>
        {% endfor %}
    </div>
{% endif %}
